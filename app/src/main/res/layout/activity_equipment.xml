<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_grey_bgrnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_grey_bgrnd"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eqBreadcrumbs"
            android:layout_width="120dp"
            android:layout_height="58dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="000"
            android:textColor="#CACACA"
            android:textSize="52sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llStart"
            android:layout_width="313dp"
            android:layout_height="87dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/black_grey_bgLight"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDateStart"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="дата запуска"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvNameF"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeep"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="глубина спуска"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvNumF"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="313dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/black_grey_bgLight"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dvName"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="привод"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvNameF"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dvNum"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="номер"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvNumF"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dvLead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ведущий шкив, мм"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvLeadF"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dvSlave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ведомый шкив, мм"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/dvSlaveF"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="317dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="@color/black_grey_bgLight"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/сvCurrDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="электродвигатель"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/сvCurrDriveD"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvCurrDrNum"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="номер"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/cvCurrDrNumD"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/сvTurn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="кол-во об/мин"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/cvTurnD"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvTurn50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="кол-во об. при 50Гц"
                    android:textColor="@color/grey_but_btn" />

                <TextView
                    android:id="@+id/cvTurn50D"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/grey_but_btn"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>